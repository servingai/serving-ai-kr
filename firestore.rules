rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 컬렉션 규칙
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 기본 규칙
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
