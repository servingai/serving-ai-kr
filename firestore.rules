rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 컬렉션 규칙
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 기본 규칙
    match /{document=**} {
      allow read: if true;  // 모든 문서 읽기 허용
      allow write: if request.auth != null;  // 인증된 사용자만 쓰기 허용
    }
  }
}
